{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {},
    "rulesDirectory": [],
    "linterOptions": { 
        "exclude": [
            "node_modules/**/*."
        ] 
    },
    "no-shadowed-variable": [
    true,
    {
        "class": true,
        "enum": true,
        "function": true,
        "interface": false,
        "namespace": true,
        "typeAlias": false,
        "typeParameter": false,
        "underscore": false
    }
    ]
}